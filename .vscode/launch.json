{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Rust",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": [
          "build",
          "--bin",
          "main",
          "--manifest-path",
          "${workspaceFolder}/rust/Cargo.toml"
        ]
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Rust Test",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": [
          "test",
          "--lib",
          "--no-run",
          "--manifest-path",
          "${workspaceFolder}/rust/Cargo.toml"
        ]
      },
      "console": "integratedTerminal",
      "postDebugTask": "debug rust test"
    },
    {
      "name": "Debug Vitest Current File",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/client",
      "program": "node_modules/vitest/vitest.mjs",
      "args": ["run", "${file}"],
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "smartStep": true
    }
  ]
}
